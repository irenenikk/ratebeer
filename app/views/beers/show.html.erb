<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
    <span>This beer has not been rated</span>
  <% else %>
    <spane>Has <%= pluralize(@beer.ratings.count , 'rating') %>, average</span>
    <%= @beer.average_rating %>
  <% end %>
</p>

<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %> |
<%= link_to 'All breweries', breweries_path %>
