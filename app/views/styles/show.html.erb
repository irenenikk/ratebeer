<p id="notice"><%= notice %></p>

<h2>
  <%= @style.name %>
</h2>

<p> <%= @style.description %>
</p>

<p>
  Number of beers <%= @style.beers.count %>
</p>

<strong>Beers</strong>
<ul>
<% @style.beers.each do |beer| %>
  <li><%= link_to beer.name, beer %> by <%= link_to beer.brewery.name, beer.brewery %></li>
<% end %>
</ul>
